<?xml version="1.0" encoding="UTF-8"?>
<interface domain="rref-explorer">
    <requires lib="gtk" version="4.0" />
    <object class="GtkWindow" id="MainWindow">
        <property name="default-height">800</property>
        <property name="default-width">800</property>
        <child>
            <object class="GtkScrolledWindow">
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <child>
                                    <object class="GtkText" id="mtx_rows">
                                        <property name="placeholder-text">Enter rows</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkText" id="mtx_cols">
                                        <property name="placeholder-text">Enter columns</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="create_mtx_btn">
                                <property name="label">Create Matrix</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkGrid" id="grid_mtx">
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>